<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TutGeolocationApp"
             x:Class="TutGeolocationApp.MainPage">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Button Text="Get Current Location" x:Name="buttonGetCurrentLoc" Clicked="ButtonGetCurrentLoc_Clicked" />
        <Label Text="Long/Lat" x:Name="labelLongLat" />
        <Button Text="Convert to address" x:Name="buttonConvert" Clicked="ButtonConvert_Clicked" />
        <Label Text="Address: " x:Name="labelAddress" />
        <Button Text="Compare to San Francisco" x:Name="buttonCompareDistance" Clicked="ButtonCompareDistance_Clicked" />
        <Label Text="Distance" x:Name="labelDistance" />
    </StackLayout>

</ContentPage>
